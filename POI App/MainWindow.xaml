<Window xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"  x:Class="POI_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POI_App"
        mc:Ignorable="d"
        Title="POIs" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="351*"/>
            <RowDefinition Height="450*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
            <ComboBox x:Name="CbxPoi" Height="auto" Width="351"  FontSize="24" SelectionChanged="CbxPoi_SelectionChanged" Margin="10">
            </ComboBox>
            <Label Content="POI" FontSize="24"/>
        </StackPanel>
        <Wpf:WebView2 Grid.Column="0" Grid.Row="1" x:Name="Karte"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               Margin="10,10,10,10" Source="https://www.openstreetmap.org/#map=6/51.32/10.46" />
        <Image Grid.Column="0" Grid.Row="2" x:Name="MyImage"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               Margin="10,10,10,10" Source="https://upload.wikimedia.org/wikipedia/commons/7/75/Berlin-Kreuzberg_Postkarte_055.jpg"/>
        <StackPanel Grid.Column="2" Grid.Row="1" Margin="10">
            <Label Content="Name:" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Lat:" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Lon:" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="2" Margin="10">
            <Label Content="Description:" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
